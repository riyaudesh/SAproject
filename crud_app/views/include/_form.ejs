<!--form handling-->
<form action="/api/users" method="POST" id="add_user">  
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Dhruv Vikram">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="Dhruv@gmail.com">
        </div>  
    <div class="form-group">
        <label for="date" class="text-light">date</label>
        <input type="date">
    </div>
    <div class="form-group">
        <label for="status" class="text-light">attendance</label>
         <div class="radio inline">
        <input type="radio" id="radio-4" name="attendance" value="present">
        <label for="radio-4" class="radio-label">present</label>
    </div>
    <div class="radio inline">
        <input type="radio" id="radio-5" name="attendance" value="absent">
        <label for="radio-5" class="radio-label">absent</label>
    </div>
<div class="form-group">
    <button type="submit" class="btn text-dark update">save</button>
 </div>
</form>